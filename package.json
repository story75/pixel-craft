{
  "name": "pixel-craft",
  "private": true,
  "trustedDependencies": [
    "esbuild",
    "sharp"
  ],
  "workspaces": [
    "packages/*",
    "demos/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "watch": "bun --cwd packages/pixel-craft watch",
    "sample": "bun --cwd demos/sample watch",
    "bench": "bun --cwd demos/bench watch",
    "parallax": "bun --cwd demos/parallax watch",
    "tileset": "bun --cwd demos/tileset-sprite watch",
    "z-index": "bun --cwd demos/z-index watch",
    "ec": "bun --cwd demos/ec watch",
    "docs": "bun --cwd apps/docs dev",
    "check": "turbo run check",
    "build": "turbo run build",
    "release": "turbo run release",
    "format": "prettier --cache --cache-strategy metadata --check '**/*'",
    "format:fix": "prettier --cache --cache-strategy metadata --write '**/*'",
    "lint": "eslint --cache --ext .ts .",
    "lint:fix": "eslint --cache --fix --ext .ts ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.5",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "turbo": "^1.13.2",
    "esbuild": "^0.20.2",
    "@webgpu/types": "^0.1.40"
  },
  "overrides": {
    "sharp": "^0.33.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --cache-strategy metadata --write"
    ],
    "*.{js,md,json,yml,yaml,html}": [
      "prettier --cache --cache-strategy metadata --write"
    ]
  }
}
