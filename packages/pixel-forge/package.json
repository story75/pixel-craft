{
  "name": "@pixel-forge/pixel-forge",
  "version": "0.1.0",
  "trustedDependencies": [
    "esbuild"
  ],
  "private": true,
  "main": "dist/index.js",
  "module": "dist/esm.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm.js",
      "require": "./dist/index.js",
      "types": "./dist/src/index.d.ts"
    }
  },
  "scripts": {
    "check": "tsc",
    "build": "bun build-cjs && bun build-esm",
    "build-cjs": "esbuild src/index.ts --loader:.wgsl=text --outfile=dist/index.js --bundle --platform=node --format=cjs --sourcemap",
    "build-esm": "esbuild src/index.ts --loader:.wgsl=text --outfile=dist/esm.js --bundle --platform=node --format=esm --sourcemap"
  },
  "dependencies": {
    "@webgpu/types": "^0.1.39"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --config=../../prettier.config.js --ignore-path=../../.prettierignore --write"
    ],
    "*.{js,md,json,yml,yaml,html}": [
      "prettier --config=../../prettier.config.js --ignore-path=../../.prettierignore --write"
    ]
  }
}
