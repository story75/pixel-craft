{
  "name": "pixel-forge",
  "version": "0.1.0",
  "private": true,
  "trustedDependencies": [
    "esbuild"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "sample": "bun --cwd packages/sample watch",
    "check": "turbo run check",
    "build": "turbo run build",
    "format": "prettier --cache --cache-strategy metadata --check '**/*'",
    "format:fix": "prettier --cache --cache-strategy metadata --write '**/*'",
    "lint": "eslint --cache --ext .ts .",
    "lint:fix": "eslint --cache --fix --ext .ts ."
  },
  "devDependencies": {
    "bun-types": "latest",
    "typescript": "^5.3.2",
    "prettier": "^3.1.0",
    "prettier-plugin-organize-imports": "^3.2.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "turbo": "^1.10.16",
    "esbuild": "^0.19.7",
    "@webgpu/types": "^0.1.39"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --cache-strategy metadata --write"
    ],
    "*.{js,md,json,yml,yaml,html}": [
      "prettier --cache --cache-strategy metadata --write"
    ]
  }
}
