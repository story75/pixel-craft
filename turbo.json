{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "bun.lockb", "tsconfig.json"],
  "tasks": {
    "check": {
      "dependsOn": ["^check"],
      "outputs": ["dist/**/*.d.ts"],
      "outputLogs": "errors-only"
    },
    "build": {
      "dependsOn": ["^build", "check"],
      "outputs": ["dist/index.js", "dist/esm.js"],
      "outputLogs": "errors-only"
    },
    "release": {
      "dependsOn": ["build"],
      "cache": false,
      "outputLogs": "errors-only"
    }
  }
}
