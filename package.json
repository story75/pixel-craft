{
  "name": "pixel-craft",
  "private": true,
  "packageManager": "bun@1.1.13",
  "trustedDependencies": [
    "esbuild",
    "sharp"
  ],
  "workspaces": [
    "packages/*",
    "demos/*",
    "apps/*"
  ],
  "scripts": {
    "prepare": "husky",
    "watch": "pixel-craft-tooling watch",
    "docs": "bun --cwd apps/docs dev",
    "check": "turbo run check",
    "build": "turbo run build",
    "release": "turbo run release",
    "format": "prettier --cache --cache-strategy metadata --check '**/*'",
    "format:fix": "prettier --cache --cache-strategy metadata --write '**/*'",
    "lint": "eslint --cache .",
    "lint:fix": "eslint --cache --fix ."
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.4.5",
    "prettier": "^3.3.2",
    "prettier-plugin-organize-imports": "^3.2.4",
    "eslint": "^9.4.0",
    "@eslint/js": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.4.0",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "typescript-eslint": "^7.13.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "turbo": "^2.0.3",
    "@webgpu/types": "^0.1.42",
    "wrangler": "^3.60.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --cache --cache-strategy metadata --write"
    ],
    "*.{mjs,js,md,json,yml,yaml,html}": [
      "prettier --cache --cache-strategy metadata --write"
    ]
  }
}
