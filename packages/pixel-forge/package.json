{
  "name": "@pixel-forge/pixel-forge",
  "version": "0.1.0",
  "trustedDependencies": [
    "esbuild"
  ],
  "private": true,
  "main": "dist/index.js",
  "module": "dist/esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "check": "tsc",
    "watch": "esbuild src/index.ts --outfile=public/dist/bundle.js --bundle --global-name=pixelForge --servedir=public --watch"
  },
  "devDependencies": {
    "@webgpu/types": "^0.1.39",
    "esbuild": "^0.19.7"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --config=../../prettier.config.js --ignore-path=../../.prettierignore --write"
    ],
    "*.{js,md,json,yml,yaml,html}": [
      "prettier --config=../../prettier.config.js --ignore-path=../../.prettierignore --write"
    ]
  }
}
